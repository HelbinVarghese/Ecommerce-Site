
<body>
  <div class="container">
<h1 class="mt-3">Add Products</h1></div>


<div class="container">
<form class="mt-1" 
action="/admin/edit-products/{{products._id}}" method="post" enctype="multipart/form-data">
  <!-- 2 column grid layout with text inputs for the first and last names -->
  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example1" class="form-control" name="Name"  value="{{products.Name}}"/>
        <label class="form-label" for="form6Example1">Name</label>
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example2" class="form-control" name="Category" value="{{products.Name}}"/>
        <label class="form-label" for="form6Example2">Category</label>
      </div>
    </div>
  </div>

  <!-- Text input -->
  <div class="form-outline mb-4">
    <input type="text" id="form6Example3" class="form-control" name="Description" value="{{products.Description}}" />
    <label class="form-label" for="form6Example3">Description</label>
  </div>

  <!-- Text input -->
  <div class="form-outline mb-4">
    <input type="text" id="form6Example4" class="form-control" name="Price" value="{{products.Price}}" />
    <label class="form-label" for="form6Example4">Price</label>
  </div>

  <!-- Email input --> 
  <div class="form-outline mb-4">
    <input type="file" id="form6Example5" class="form-control" name="image"  required="true" onchange="viewchange(event)"/>
    <label class="form-label" for="form6Example5">Image</label>
    <img src="/product-images//{{products._id}}.jpg" alt="" style="width: 100px; height:auto;" id="imgView">
  </div>



  <!-- Submit button -->
  <button type="submit" class="btn btn-primary btn-block mb-4">Edit PRODUCT</button>
</form>
</div>

</body>

<script> 
function viewchange(event){
  document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
}
</script>
